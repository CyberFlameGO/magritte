<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/preview_display_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/no_camera_access_view"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:text="@string/no_camera_access" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/controls_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#41FFFFFF">
        <ImageButton
            android:id="@+id/camera_toggle"
            android:layout_width="@dimen/camera_toggle_dim"
            android:layout_height="@dimen/camera_toggle_dim"
            android:layout_marginBottom="@dimen/icon_margin"
            android:layout_centerInParent="true"
            android:padding="@dimen/top_icon_padding"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_flip_camera_android" />
    </RelativeLayout>
</RelativeLayout>
